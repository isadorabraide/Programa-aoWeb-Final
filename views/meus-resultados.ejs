<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meus Resultados</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <span>üìä Meus Resultados</span>
        <div class="perfil-info">
            <span id="userName"></span>
            <button id="logoutBtn" class="btn-logout">Sair</button>
        </div>
    </header>

    <nav>
        <ul>
            <li><a href="/">üè† In√≠cio</a></li>
            <li><a href="/criar-quiz">üìö Criar Quiz</a></li>
            <li><a href="/meus-quizzes">üìù Meus Quizzes</a></li>
            <li><a href="/meus-resultados" class="active">üìä Meus Resultados</a></li>
        </ul>
    </nav>

    <div class="container">
        <div class="coluna centro">
            <h2>Seus Resultados</h2>
            <div id="resultados-container">
                <!-- Os resultados ser√£o inseridos aqui dinamicamente -->
            </div>
        </div>
    </div>

    <footer>¬© 2025 Quiz Master - Todos os direitos reservados.</footer>

    <script>
        async function carregarResultados() {
            const token = localStorage.getItem('token');
            const container = document.getElementById('resultados-container');
    
            if (!token) {
                container.innerHTML = '<p class="mensagem-vazia">Fa√ßa login para ver seus resultados.</p><a href="/login" class="btn">Fazer Login</a>';
                return;
            }
    
            try {
                const response = await fetch('/meus-resultados-data', {
                    headers: {
                        'Authorization': `Bearer ${token}`,
                    },
                });
    
                if (!response.ok) {
                    const errorText = await response.text();
                    if (response.status === 401 || response.status === 400) {
                        localStorage.removeItem('token');
                        container.innerHTML = '<p class="mensagem-vazia">Sess√£o expirada. Fa√ßa login novamente.</p><a href="/login" class="btn">Fazer Login</a>';
                    } else {
                        throw new Error(errorText);
                    }
                    return;
                }
    
                const resultados = await response.json();
                if (resultados.length === 0) {
                    container.innerHTML = '<p class="mensagem-vazia">Voc√™ ainda n√£o respondeu a nenhum quiz.</p><a href="/" class="btn">Voltar para In√≠cio</a>';
                } else {
                    const html = resultados.map(resultado => `
                        <div class="resultado-card">
                            <h3>${resultado.quiz.titulo}</h3>
                            <p><strong>Pontua√ß√£o:</strong> ${resultado.pontuacao} pontos</p>
                            <p><strong>Acertos:</strong> ${resultado.pontuacao} de ${resultado.totalPerguntas || resultado.quiz.perguntas.length} perguntas</p>
                            <p><strong>Data:</strong> ${new Date(resultado.data).toLocaleDateString()}</p>
                        </div>
                    `).join('');
                    container.innerHTML = `<div class="lista-resultados">${html}</div>`;
                }
            } catch (error) {
                console.error('Erro:', error);
                container.innerHTML = `<p class="mensagem-vazia">Erro ao carregar resultados: ${error.message}</p>`;
            }
        }
    
        document.addEventListener('DOMContentLoaded', () => {
            const userName = localStorage.getItem('userName');
            if (userName) {
                document.getElementById('userName').textContent = `Ol√°, ${userName}`;
            }
    
            document.getElementById('logoutBtn').addEventListener('click', () => {
                localStorage.removeItem('token');
                localStorage.removeItem('userName');
                window.location.href = '/login';
            });
    
            carregarResultados();
        });
    </script>
</body>
</html>